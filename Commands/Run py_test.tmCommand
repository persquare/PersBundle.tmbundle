<plist version="1.0">
<dict>
	<key>beforeRunningCommand</key>
	<string>saveActiveFile</string>
	<key>command</key>
	<string>#!/bin/sh
source $TM_VIRTUALENV/bin/activate

echo "&lt;pre&gt;"
if [ "x$TM_SELECTED_TEXT" = "x" ]; then
    # no selection, run full
    py.test -v $TM_FILEPATH
else
    py.test -v  -k "$TM_SELECTED_TEXT" $TM_FILEPATH
fi
echo "&lt;/pre&gt;"

exit 0
</string>
	<key>input</key>
	<string>none</string>
	<key>inputFormat</key>
	<string>text</string>
	<key>keyEquivalent</key>
	<string>^@p</string>
	<key>name</key>
	<string>Run py.test</string>
	<key>outputCaret</key>
